<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_choose_head_from_camera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/black_normal_color"
        android:textSize="16sp" />

    <View
        android:id="@+id/dialog_choose_head_line_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_line_color" />

    <TextView
        android:id="@+id/dialog_choose_head_from_album"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="从相册选择图片"
        android:textColor="@color/black_normal_color"
        android:textSize="16sp" />

    <View
        android:id="@+id/dialog_choose_head_line_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/black_line_color" />

    <TextView
        android:id="@+id/dialog_choose_head_cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black_normal_color"
        android:textSize="16sp" />

</LinearLayout>